@model LunarCoffee.Models.EntityFramework.Export
@using PagedList;
@{
    ViewBag.Title = "Chi tiết phiếu xuất";
}
@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Export" class="nav-link" style="font-size:18px">Danh sách phiếu xuất</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Export" class="nav-link" style="font-size:18px">Chi tiết phiếu xuất</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title" style="font-size:30px">Chi tiết phiếu xuất</h2>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Mã phiếu xuất</label>
                        <p class="form-control" style="font-size:18px">@Model.Code</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Ngày tạo</label>
                        <p class="form-control" style="font-size:18px">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Kho</label>
                        <p class="form-control" style="font-size:18px">@Model.WareName</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Trạng thái</label>
                        <p class="form-control" style="font-size:18px">@(Model.IsExport == 1?"Đã xuất" : "Chưa xuất")</p>
                    </div>
                </div>
                <div class="col-md-6">

                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h2 class="card-title" style="font-size:30px">Danh sách sản phẩm</h2>
                </div>
                <div class="col-12" style="font-size:18px; margin-top:15px">
                    @Html.Action("Partial_SanPham", "Export", new { id = Model.Id })
                </div>

            </div>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->